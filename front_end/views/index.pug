doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    title Thirteen
    link(href='./assets/css/style.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Lato', rel='stylesheet')
  body
    .hero
      header
        .container
          h1 Thirteen
          section.buttons
            //- span.button#connect Connect
            span.button.disabled About
      section.content
        .container
          .box.shadow
            .game
              .login-box.shadow
                .login-selection
                  input(type="text" id='username-select' placeholder="Username...")
                  select(id='game-size-select')
                    option(value='2') 2 Players
                    option(value='3') 3 Players
                    option(value='4') 4 Players
                .button#connect Connect
            .status
              .button#pass(hidden) Pass
              .text Loading...
              .button#play(hidden) Play
  script(src="./assets/js/cards.js" data-cfasync="false")
  script(src="./assets/js/thirteen-api.js" data-cfasync="false")
  script(src="./assets/js/utils.js" data-cfasync="false")
  script(src="./assets/js/client.js" data-cfasync="false")
